@model CarService.Models.Car

@{
ViewData["Title"] = "Створення автомобіля";
}

<h1>Створення автомобіля</h1>

<div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Make" class="control-label">Марка</label>
                <input asp-for="Make" class="form-control"/>
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label">Модель</label>
                <input asp-for="Model" class="form-control"/>
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label">Рік</label>
                <input asp-for="Year" class="form-control"/>
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label">Номер</label>
                <input asp-for="Number" class="form-control"/>
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vin" class="control-label">VIN</label>
                <input asp-for="Vin" class="form-control"/>
                <span asp-validation-for="Vin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mileage" class="control-label">Пробіг</label>
                <input asp-for="Mileage" class="form-control"/>
                <span asp-validation-for="Mileage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label">Власник</label>
                <div class="input-group">
                    <select asp-for="UserId" asp-items="ViewBag.Users" class="form-control">
                        <option value="">-- Виберіть власника --</option>
                    </select>
                    <div class="input-group-append">
            <span class="input-group-text">
                <i class="bi bi-chevron-down"></i>
            </span>
                    </div>
                </div>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</div>
