@model CarService.Models.Car

@{
ViewData["Title"] = "Видалення автомобіля";
}

<h1>Видалення автомобіля</h1>

<div>
    <h4>Ви впевнені, що хочете видалити цей автомобіль?</h4>
    <div>
        <h5>Автомобіль</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Марка</dt>
            <dd class="col-sm-10">@Model.Make</dd>

            <dt class="col-sm-2">Модель</dt>
            <dd class="col-sm-10">@Model.Model</dd>

            <dt class="col-sm-2">Рік</dt>
            <dd class="col-sm-10">@Model.Year</dd>

            <dt class="col-sm-2">Номер</dt>
            <dd class="col-sm-10">@Model.Number</dd>

            <dt class="col-sm-2">VIN</dt>
            <dd class="col-sm-10">@Model.Vin</dd>

            <dt class="col-sm-2">Пробіг</dt>
            <dd class="col-sm-10">@Model.Mileage</dd>

            <dt class="col-sm-2">Власник</dt>
            <dd class="col-sm-10">@Model.User?.UserName</dd>
        </dl>
    </div>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Видалити" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
    </div>
</form>
