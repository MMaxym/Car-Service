@model CarService.Models.LoginViewModel

@{
    Layout = null;
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
<style>
    body {
        background-color: #bfbfbf;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh; 
        margin: 0; 
    }
    .form-container {
        width: 400px;
        margin: 50px;
        padding: 20px;
        border: 1px solid #dee2e6;
        border-radius: 5px;
        background-color: white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
    }
    h2 {
        text-align: center;
        margin-bottom: 30px;
    }
    .btn-link {
        text-decoration: none;
        color: #ff8100; 
    }
    .btn-link:hover {
        color: #ff0000; 
    }
</style>

<div class="form-container">
    <h2>Авторизація</h2>

    <form asp-action="Login" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="UserName">Логін</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Пароль</label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-info btn-block" style="background-color: #d51c1c;">Увійти</button>
    </form>

    <div class="mt-3 text-center">
        <p>Немає акаунту? <a asp-controller="Account" asp-action="Register" class="btn btn-link">Зареєструватися</a></p>
    </div>
</div>