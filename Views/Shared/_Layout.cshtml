<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - CarService</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/CarService.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


</head>
<body>
<header style="margin-bottom: 30px;">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" style="color: #ffc107; margin-right: 30px;" href="@Url.Action("Index", "MainAdmin")">АДМІН ПАНЕЛЬ</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-3">
                    <li class="nav-item">
                        <a class="nav-link" style="margin-left: 30px; color: #74bbd5;" href="@Url.Action("Index", "UserAdmin")">Користувачі</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="margin-left: 30px; color: #74bbd5;" href="@Url.Action("Index", "CarAdmin")">Автомобілі</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="margin-left: 30px; color: #74bbd5;" href="@Url.Action("Index", "RepairRecordAdmin")">ЗаписиПроРемонт</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="margin-left: 30px; color: #74bbd5;" href="@Url.Action("Index", "MasterAdmin")">Майстри</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link btn btn-info text-white" href="@Url.Action("Index", "MainAdmin")">
                            <i class="fas fa-home"></i> На головну
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-danger text-white" style="margin-left: 15px;" href="@Url.Action("Login", "Account")">
                            <i class="fas fa-sign-out-alt"></i> Вийти
                        </a>
                    </li>
                </ul>

            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    .nav-link:hover {
        color: #ff9393 !important;
    }
</style>