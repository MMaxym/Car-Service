@model CarService.Models.Car

@{
Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@600;700&family=Ubuntu:wght@400;500&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">

    <title>CarService</title>
</head>
<body>
<div>

    <!-- Topbar Start -->
    <div class="container-fluid bg-light p-0 fixed-top" style="z-index: 1000;">
        <div class="row gx-0 d-none d-lg-flex">
            <div class="col-lg-7 px-5 text-start">
                <div class="h-100 d-inline-flex align-items-center py-3 me-4">
                    <small class="fa fa-map-marker-alt text-primary me-2"></small>
                    <small>Зарічанська 10, Хмельницький, Україна</small>
                </div>
                <div class="h-100 d-inline-flex align-items-center py-3">
                    <small class="far fa-clock text-primary me-2"></small>
                    <small>Понеділок - Пʼятниця : 09:00 - 18:00</small>
                </div>
            </div>
            <div class="col-lg-5 px-5 text-end">
                <div class="h-100 d-inline-flex align-items-center py-3 me-4">
                    <small class="fa fa-phone-alt text-primary me-2"></small>
                    <small>+380988678545</small>
                </div>
                <div class="h-100 d-inline-flex align-items-center">
                    <a class="btn btn-sm-square bg-white text-primary me-1" href=""><i class="fab fa-facebook-f"></i></a>
                    <a class="btn btn-sm-square bg-white text-primary me-1" href=""><i class="fab fa-telegram"></i></a>
                    <a class="btn btn-sm-square bg-white text-primary me-1" href=""><i class="fab fa-linkedin-in"></i></a>
                    <a class="btn btn-sm-square bg-white text-primary me-0" href=""><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
    </div>
    <!-- Topbar End -->

    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light shadow fixed-top" style="top: 50px; z-index: 999;">
        <a href="@Url.Action("Index", "User")" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
            <h2 class="m-0 text-primary"><i class="fa fa-car me-3"></i>Автосервіс</h2>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <span class="nav-item nav-link" style="font-size: 1.5rem; font-weight: bold; color: #ff8c0f;">Привіт, @User.Identity.Name!</span>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                <a href="@Url.Action("Index", "User")" class="nav-item nav-link">Головна</a>
                <a href="@Url.Action("MyCars", "User")" class="nav-item nav-link active">Мої авто</a>
                <a href="@Url.Action("MyRepairs", "User")" class="nav-item nav-link active">Мої ремонти</a>
            </div>
            <a href="@Url.Action("Login", "Account")" class="btn btn-primary py-4 px-lg-5 d-none d-lg-block">Уввійти<i class="fa fa-arrow-right ms-3"></i></a>
        </div>
    </nav>
    <!-- Navbar End -->

    <div style="width: 1200px; margin-top: 200px; margin-left: 200px; margin-bottom: 100px;">
        <h1>Редагування автомобіля</h1>

        <div>
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="EditCar">
                        <input type="hidden" asp-for="Id"/>
                        <div class="form-group">
                            <label asp-for="Make" class="control-label">Марка</label>
                            <input asp-for="Make" class="form-control"/>
                            <span asp-validation-for="Make" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Model" class="control-label">Модель</label>
                            <input asp-for="Model" class="form-control"/>
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Year" class="control-label">Рік</label>
                            <input asp-for="Year" class="form-control"/>
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Number" class="control-label">Номер</label>
                            <input asp-for="Number" class="form-control"/>
                            <span asp-validation-for="Number" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Vin" class="control-label">VIN</label>
                            <input asp-for="Vin" class="form-control"/>
                            <span asp-validation-for="Vin" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Mileage" class="control-label">Пробіг</label>
                            <input asp-for="Mileage" class="form-control"/>
                            <span asp-validation-for="Mileage" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserId" class="control-label">Власник</label>
                            <div class="input-group">
                                <select asp-for="UserId" asp-items="ViewBag.Users" class="form-control">
                                    <option value="">-- Виберіть власника --</option>
                                </select>
                                <div class="input-group-append">
                                <span class="input-group-text">
                                    <i class="bi bi-chevron-down"></i>
                                </span>
                                </div>
                            </div>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Зберегти" class="btn btn-primary"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div>
            <a asp-action="MyCars" class="btn btn-secondary">Назад</a>
        </div>
    </div>

    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-light footer pt-5 mt-5 fact" style="background-image: url('images/carousel-bg-1.jpg'); background-size: cover; background-position: center;">
        <div class="overlay"></div>
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <h4 class="text-light mb-4">Наша адреса</h4>
                    <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>Зарічанська 10, Хмельницький, Україна</p>
                    <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>+380988678545</p>
                    <p class="mb-2"><i class="fa fa-envelope me-3"></i>makspufi@gmail.com</p>
                    <div class="d-flex pt-2">
                        <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-telegram"></i></a>
                        <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-youtube"></i></a>
                        <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h4 class="text-light mb-4">Години роботи</h4>
                    <h6 class="text-light">Понеділок - Пʼятниця:</h6>
                    <p class="mb-4">9:00 - 18:00</p>
                    <h6 class="text-light">Субота - Неділя:</h6>
                    <p class="mb-0">Вихідні дні</p>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h4 class="text-light mb-4">Послуги</h4>
                    <a class="btn btn-link" href="">Діагностика</a>
                    <a class="btn btn-link" href="">Обслуговування двигуна</a>
                    <a class="btn btn-link" href="">Заміна шин</a>
                    <a class="btn btn-link" href="">Заміна масла</a>
                    <a class="btn btn-link" href="">Прибирання пилососом</a>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h4 class="text-light mb-4">Інформаційна карточка</h4>
                    <p>Це сайт автосервісу, який надає кваліфіковані послуги для обслуговування автомобілів</p>
                    <div class="position-relative mx-auto" style="max-width: 400px;">
                        <input class="form-control border-0 w-100 py-3 ps-4 pe-5" type="text" placeholder="Ваш email">
                        <button type="button" class="btn btn-primary py-2 position-absolute top-0 end-0 mt-2 me-2">Надіслати</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="copyright">
                <div class="row">
                    <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                        &copy; <a class="border-bottom" href="#">АВТОСЕРВІС</a>, Усі права захищені.
                        <br>
                        Розроблено <a class="border-bottom" href="https://github.com/MMaxym">Melnyk Maksym</a>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <div class="footer-menu">
                            <a href="@Url.Action("Index", "User")">Головна</a>
                            <a href="">Про нас</a>
                            <a href="">Послуги</a>
                            <a href="">Контакти</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->

</div>


<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="lib/wow/wow.min.js"></script>
<script src="lib/easing/easing.min.js"></script>
<script src="lib/waypoints/waypoints.min.js"></script>
<script src="lib/counterup/counterup.min.js"></script>
<script src="lib/owlcarousel/owl.carousel.min.js"></script>
<script src="lib/tempusdominus/js/moment.min.js"></script>
<script src="lib/tempusdominus/js/moment-timezone.min.js"></script>
<script src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

<script src="~/js/main.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
<script>
    new WOW().init();
</script>
</body>
</html>
