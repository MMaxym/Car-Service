@model CarService.Models.RepairRecord

@{
ViewData["Title"] = "Створити Запис Ремонту";
}

<h1>Створити Запис Ремонту</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="ScheduledDate" class="control-label">Дата ремонту</label>
                <input asp-for="ScheduledDate" class="form-control" type="date"/>
                <span asp-validation-for="ScheduledDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label">Статус</label>
                <div class="input-group">
                    <select asp-for="Status" asp-items="ViewBag.Statuses" class="form-control">
                        <option value="">-- Виберіть статус --</option>
                    </select>
                    <div class="input-group-append">
                        <span class="input-group-text">
                            <i class="bi bi-chevron-down"></i>
                        </span>
                    </div>
                </div>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RepairDescription" class="control-label">Опис</label>
                <textarea asp-for="RepairDescription" class="form-control"></textarea>
                <span asp-validation-for="RepairDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label">Ціна</label>
                <input asp-for="Cost" class="form-control" type="number" step="0.01"/>
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarId" class="control-label">Автомобіль</label>
                <div class="input-group">
                    <select asp-for="CarId" asp-items="ViewBag.Cars" class="form-control">
                        <option value="">-- Виберіть автомобіль --</option>
                    </select>
                    <div class="input-group-append">
                        <span class="input-group-text">
                            <i class="bi bi-chevron-down"></i>
                        </span>
                    </div>
                </div>
                <span asp-validation-for="CarId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MasterId" class="control-label">Майстер</label>
                <div class="input-group">
                    <select asp-for="MasterId" asp-items="ViewBag.Masters" class="form-control">
                        <option value="">-- Виберіть майстра --</option>
                    </select>
                    <div class="input-group-append">
                        <span class="input-group-text">
                            <i class="bi bi-chevron-down"></i>
                        </span>
                    </div>
                </div>
                <span asp-validation-for="MasterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</div>
