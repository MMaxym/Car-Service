@model CarService.Models.User

@{
ViewData["Title"] = "Деталі Клієнта";
}

<h1>Деталі Клієнта</h1>

<div>
    <h4>Інформація про Клієнта</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Імʼя</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-2">Прізвище</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Surname)</dd>

        <dt class="col-sm-2">Логін</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.UserName)</dd>

        <dt class="col-sm-2">Номер телефону</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PhoneNumber)</dd>

        <dt class="col-sm-2">Електронна пошта</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редагувати</a>
    <a asp-action="Index" class="btn btn-primary">Назад</a>
</div>
